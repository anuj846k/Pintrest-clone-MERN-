<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input type="file" name="postimage" class="block w-1/3 border rounded-md px-4 py-2 mt-2 bg-gray-200 text-gray-800">
        <input type="text" placeholder="Title" name="title" class="block w-1/3 border rounded-md px-4 py-2 mt-2 bg-gray-200 text-gray-800">
        <textarea placeholder="Description" name="description" class="block h-60 w-1/3 border rounded-md px-4 py-2 mt-2 bg-gray-200 text-gray-800"></textarea>
        <input type="submit" value="Create Post" class="block cursor-pointer w-1/3 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mt-3">
    </form>
</div>
