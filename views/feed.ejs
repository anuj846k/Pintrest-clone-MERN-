<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <h2 class="text-2xl font-semibold mb-4">All Pins</h2>
    <div class="flex flex-wrap -mx-2">
        <% posts.forEach(function(elem){ %>
        <div class="w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/5 px-2 mb-4">
            <div class="card bg-white rounded-lg overflow-hidden shadow-lg transition duration-300 ease-in-out transform hover:scale-105 hover:shadow-xl" style="max-height: 24rem;">
                <a href="/show/post/<%= elem._id.toString() %>" class="block"> 
                    <img class="object-cover w-full h-48" src="/images/uploads/<%= elem.image %>" alt="<%= elem.title %>">
                </a>
                
                <div class="p-4" style="max-height: 8rem;">
                    <h5 class="text-lg font-semibold text-gray-900 mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= elem.title.substring(0, 20) %></h5>
                    <p class="text-sm text-gray-700 leading-snug mb-2">
                        <%= elem.description.length > 25 ? elem.description.substring(0, 25) + '...' : elem.description || 'No description available' %>
                    </p>
                </div>
                <div class="px-4 py-2 border-t border-gray-200 flex justify-between items-center">
                    <div class="flex items-center mr-5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                        </svg>
                        <span class="text-gray-500 text-sm"><%= elem.likes %> Likes</span>
                    </div>
                    <div>
                        <span class="text-gray-500 text-sm">Posted on <%= new Date(elem.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></span> 
                    </div>
                    
                </div>
                <div class="px-4 py-2 border-t border-gray-200">
                    <h6 class="text-xs text-gray-500">@<%= elem.user.username %></h6>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>
